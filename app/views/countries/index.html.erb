<section class="content-info">
  <div class="container paddings-mini">
    <div class="row">
      <div class="col-lg-12">
        <h1>Countries</h1>
        <div>
          <!-- Search Form -->
          <form class="input-group" method="GET" action="/search">
            <div class="form-outline">
              <input type="search" placeholder="Search" aria-label="Search" name="query" class="form-control" >
            </div>
            <button type="submit" class="btn btn-primary">
              <i>Search</i>
            </button>
          </form>
          <!-- Search Form -->
          <!-- Pagination -->
            <div aria-label="Page navigation example">
              <ul class="pagination justify-content-end">
                <li class="page-item">
                  <%= will_paginate @players, previous_label: "PREV", next_label: "NEXT", inner_window: 1, outer_window: 0, class: "page-link" %>
                </li>
              </ul>
            </div>
          <!-- Pagination -->
        </div>
        <!-- Table -->
        <% if @countries.empty? %>
          <p>No result found for the <%= params[:query] %></p>
        <% else %>
          <table class="table table-striped table-responsive table-bordered table-hover result-point">
            <thead class="table-dark text-center">
              <tr>
                <th>Id.</th>
                <th>Country</th>
              </tr>
            </thead>
            <tbody class="text-center">
                <% @countries.each do |country| %>
                  <tr>
                    <td><%= country.id %></td>
                    <td><%= link_to country.name, country_path(country) %></td>
                  </tr>
                <% end %>
            </tbody>
          </table>
        <% end %>
        <!-- Table -->
        <!-- Pagination -->
          <div aria-label="Page navigation example">
            <ul class="pagination justify-content-end">
              <li class="page-item">
                <%= will_paginate @players, previous_label: "PREV", next_label: "NEXT", inner_window: 1, outer_window: 0, class: "page-link" %>
              </li>
            </ul>
          </div>
        <!-- Pagination -->
      </div>
    </div>
  </div>
</section>

